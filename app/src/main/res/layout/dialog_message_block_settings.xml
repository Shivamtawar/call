<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_card_background"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="@drawable/dialog_header_background">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_phone"
            android:layout_marginEnd="12dp"
            app:tint="#3498DB" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Message Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2C3E50" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select which message types to block for this contact:"
            android:textSize="14sp"
            android:textColor="#5D6D7E"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background_light"
            android:padding="12dp">

            <CheckBox
                android:id="@+id/cbBlockMissedCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Block Missed Call Messages"
                android:textSize="14sp"
                android:textColor="#2C3E50"
                android:paddingVertical="8dp"
                android:drawableEnd="@drawable/ic_info"
                android:drawablePadding="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E7E9"
                android:layout_marginVertical="4dp" />

            <CheckBox
                android:id="@+id/cbBlockAfterCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Block After Call Messages"
                android:textSize="14sp"
                android:textColor="#2C3E50"
                android:paddingVertical="8dp"
                android:drawableEnd="@drawable/ic_info"
                android:drawablePadding="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E7E9"
                android:layout_marginVertical="4dp" />

            <CheckBox
                android:id="@+id/cbBlockBusy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Block Busy Messages"
                android:textSize="14sp"
                android:textColor="#2C3E50"
                android:paddingVertical="8dp"
                android:drawableEnd="@drawable/ic_info"
                android:drawablePadding="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E7E9"
                android:layout_marginVertical="4dp" />

            <CheckBox
                android:id="@+id/cbBlockOutgoingMissed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Block Outgoing Missed Messages"
                android:textSize="14sp"
                android:textColor="#2C3E50"
                android:paddingVertical="8dp"
                android:drawableEnd="@drawable/ic_info"
                android:drawablePadding="8dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Tip: Unchecked message types will still be sent to this contact"
            android:textSize="12sp"
            android:textColor="#7F8C8D"
            android:textStyle="italic"
            android:layout_marginTop="12dp"
            android:background="@drawable/tip_background"
            android:padding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/dialog_footer_background">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:textColor="#E74C3C"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="#E74C3C"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Save Settings"
            android:backgroundTint="#27AE60"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>