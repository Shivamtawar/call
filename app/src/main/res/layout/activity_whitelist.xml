<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_gradient"
        android:elevation="8dp"
        app:title="Whitelist Contacts"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_whitelist"
                            android:color="#4CAF50"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Whitelisted Contacts"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50" />

                        <TextView
                            android:id="@+id/tvWhitelistCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="14sp"
                            android:textColor="#7F8C8D"
                            android:background="@drawable/count_badge_bg"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E8E8E8"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvWhitelistedContacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:minHeight="100dp" />

                    <TextView
                        android:id="@+id/tvEmptyWhitelist"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="No whitelisted contacts yet\nTap 'Add Contacts' to get started"
                        android:textSize="14sp"
                        android:textColor="#7F8C8D"
                        android:gravity="center"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddContacts"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Add Contacts to Whitelist"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#3498DB"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_add"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:iconTint="@android:color/white"
                android:layout_marginBottom="8dp"
                android:elevation="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddCustomNumber"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Add Custom Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_phone"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:iconTint="@android:color/white"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>