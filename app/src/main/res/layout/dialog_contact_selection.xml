<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#3498DB">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Contacts"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/ivCloseDialog"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:contentDescription="Close dialog"
            app:tint="@android:color/white" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:boxStrokeColor="#3498DB"
        app:hintTextColor="#3498DB">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search contacts..."
            android:inputType="text"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAllContacts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="8dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#F8F9FA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Custom Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCustomNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="#3498DB"
                app:hintTextColor="#3498DB">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCustomNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter phone number"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/llCustomMessageSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:background="@drawable/rounded_background_light"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Block Message Types for Custom Number:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#34495E"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/cbCustomBlockMissedCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Missed Call Messages"
                    android:textSize="13sp"
                    android:textColor="#5D6D7E" />

                <CheckBox
                    android:id="@+id/cbCustomBlockAfterCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="After Call Messages"
                    android:textSize="13sp"
                    android:textColor="#5D6D7E" />

                <CheckBox
                    android:id="@+id/cbCustomBlockBusy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Busy Messages"
                    android:textSize="13sp"
                    android:textColor="#5D6D7E" />

                <CheckBox
                    android:id="@+id/cbCustomBlockOutgoingMissed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outgoing Missed Messages"
                    android:textSize="13sp"
                    android:textColor="#5D6D7E" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:textColor="#E74C3C"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="#E74C3C" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Save"
            android:backgroundTint="#27AE60"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>