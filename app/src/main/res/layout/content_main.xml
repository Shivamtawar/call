<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Message After Call -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message after call ends"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#1E2A38"
                android:layout_marginTop="16dp"
                app:startIconDrawable="@drawable/ic_message"
                app:startIconTint="#1E2A38">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editAfterCall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Message When Call Is Cut -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message when call is cut"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#1E2A38"
                android:layout_marginTop="16dp"
                app:startIconDrawable="@drawable/ic_call_end"
                app:startIconTint="#1E2A38">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editCallCut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Message When Busy -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message when busy"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#1E2A38"
                android:layout_marginTop="16dp"
                app:startIconDrawable="@drawable/ic_busy"
                app:startIconTint="#1E2A38">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editBusy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Messages"
                android:textAllCaps="false"
                android:layout_marginTop="32dp"
                android:backgroundTint="#1E2A38"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:elevation="2dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
